.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name  test  
        =link_to "#", class: "edit__btn" do
          = fa_icon 'cog'      
        =link_to "#", class: "edit__btn" do
          = fa_icon 'edit'

    .groups
      =link_to "#" , class:"link" do
        .group
          .group__group-name
            ddddddd 
          .group__latest-message
            まだメッセージがありません
      
      
  .chat-main
    
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group test-group
        %ul.main-header__left-box__member-list 
          Menber:
          %li.main-header__left-box__member-list__member Ⅱ
          %li.main-header__left-box__member-list__member test
      .main-header__edit-btn
        %input.btn{:type => "submit", :value => "send"}
        
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker test
          %p.message__upper-info__date 2019/09/01(Sun) 19:51:33
        %p.message__text eeeeee

    .forms
      .form
        %input.form__message{:placeholder => "type a message"}
        .form__mask
          %label.form__mask__image
            = fa_icon 'picture-o', class: 'icon'
            %input.hidden{type: 'file'}
        %input.form__submit{type: 'submit', value: 'Send'}      